<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/search_pref_AutoComplete"
    android:id="@+id/searchPrefSwitchCon"
    android:paddingBottom="1dp">

    <Switch
        android:id="@+id/searchPrefSwitch"
        android:layout_width="wrap_content"
        android:switchMinWidth="40dp"
        android:layout_height="wrap_content"
        android:textOff=""
        android:textOn=""
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:thumb="@drawable/switch_sctr"
        android:track="@drawable/switch_trak" />

    <!-- -->

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/searchPrefText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:text="ארץ" />

    <webit.android.shanti.customViews.MultiSpinner
        android:background="@color/very_light_purple"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchPrefText"
        android:id="@+id/searchPrefSpinner"
        android:layout_width="0dip"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@+id/searchPrefSwitch"
        android:visibility="invisible" />
</RelativeLayout>
