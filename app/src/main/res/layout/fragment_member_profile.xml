<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/member_profile_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_afarpar"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/memberProfileTopArea"
            android:layout_width="match_parent"
            android:layout_height="130.5dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:background="@color/offwhite_base"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="3">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="9dp"
               >

                <!-- <View
                     android:layout_width="113.5dp"
                     android:layout_height="113.5dp"
                     android:alpha="0.2"
                     android:background="@color/offwhite_base"
                     />-->

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/memberProfileImage"
                    android:layout_width="111dp"
                    android:layout_height="111dp"
                    android:layout_centerInParent="true"
                    android:background="@color/offwhite_base"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_photo"
                    app:sriv_border_color="@color/green"
                    app:sriv_border_width="1dp"
                    app:sriv_left_bottom_corner_radius="10dp"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_bottom_corner_radius="10dp"
                    app:sriv_right_top_corner_radius="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical"
             >

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="full name"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/gray_dark"
                    android:textSize="21sp"

                    />


                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/userInfoText"
                    android:textColor="@color/gray_medium"
                    android:textSize="@dimen/member_profile_text_textSize" />


                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileShantiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/profileMemberShantiName"
                    android:textColor="@color/gray_medium"
                    android:textSize="@dimen/member_profile_text_textSize" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileGenderAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_medium"
                    android:textSize="@dimen/member_profile_text_textSize" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/shadow_line"
            android:layout_alignBottom="@id/memberProfileTopArea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="414.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/offwhite_base"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="19.5dp">

            <webit.android.shanti.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profileMemberPersonalArea"
                android:textSize="@dimen/member_profile_title_textSize" />


            <LinearLayout style="@style/member_profile_text_container">

                <webit.android.shanti.customViews.CustomTextView
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberCountry" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileCountry"
                    style="@style/member_profile_gray_medium_text"
                    android:text="xcvcvcbcbcbcbvcbcxv"
                    android:textColor="@color/gray_medium" />


            </LinearLayout>

            <LinearLayout style="@style/member_profile_text_container">


                <webit.android.shanti.customViews.CustomTextView
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberLanguages" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileLanguages"
                    style="@style/member_profile_gray_medium_text"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/member_profile_text_container">


                <webit.android.shanti.customViews.CustomTextView
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberReligion" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileUserPrefReligion"
                    style="@style/member_profile_gray_medium_text"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/member_profile_text_container">

            <webit.android.shanti.customViews.CustomTextView
                style="@style/member_profile_gray_dark_text"
                android:text="@string/profileMemberLevelReligion" />

            <webit.android.shanti.customViews.CustomTextView
                android:id="@+id/memberProfileLevelReligion"
                style="@style/member_profile_gray_medium_text"
                android:text="" />
        </LinearLayout>


            <!--<LinearLayout style="@style/member_profile_text_container">-->


            <!--<webit.android.shanti.customViews.CustomTextView-->
            <!--style="@style/member_profile_gray_dark_text"-->
            <!--android:text="@string/profileMemberReligion" />-->

            <!--<webit.android.shanti.customViews.CustomTextView-->
            <!--android:id="@+id/memberProfileReligion"-->
            <!--style="@style/member_profile_gray_medium_text"-->
            <!--android:text="" />-->
            <!--</LinearLayout>-->

            <!--<LinearLayout style="@style/member_profile_text_container">-->

            <!--<webit.android.shanti.customViews.CustomTextView-->
            <!--style="@style/member_profile_gray_dark_text"-->
            <!--android:text="@string/profileMemberLevelReligion" />-->

            <!--<webit.android.shanti.customViews.CustomTextView-->
            <!--android:id="@+id/memberProfileLevelReligion"-->
            <!--style="@style/member_profile_gray_medium_text"-->
            <!--android:text="" />-->
            <!--</LinearLayout>-->

            <LinearLayout style="@style/member_profile_text_container">

                <webit.android.shanti.customViews.CustomTextView
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberJob" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileJob"
                    style="@style/member_profile_gray_medium_text"
                    android:text="" />


            </LinearLayout>

            <LinearLayout style="@style/member_profile_text_container">


                <webit.android.shanti.customViews.CustomTextView
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberHobby" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileHobby"
                    style="@style/member_profile_gray_medium_text"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                style="@style/member_profile_text_container"
                android:orientation="vertical">


                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileMoreInfoTitle"
                    style="@style/member_profile_gray_dark_text"
                    android:text="@string/profileMemberMoreInfo" />

                <webit.android.shanti.customViews.CustomTextView
                    android:id="@+id/memberProfileMoreInfo"
                    style="@style/member_profile_gray_medium_text"
                    android:lines="6"
                    android:singleLine="false"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>