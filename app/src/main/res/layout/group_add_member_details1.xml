<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/offwhite_base"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/addMembersSendAsk"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@drawable/group_edit_input_background"
        android:text="@string/addMembersSendAsk"
        android:textColor="@color/black"
        android:visibility="visible" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/addMembersUserCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="sdsds"
        android:textColor="@color/gray_dark"
        android:textSize="17sp" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/addMembersUserName"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ssssssssssss"
        android:gravity="start"
        android:layout_toEndOf="@+id/addMembersUserImage"
        android:textColor="@color/gray_dark"
        android:textSize="17sp" />


    <com.joooonho.SelectableRoundedImageView
        app:sriv_left_bottom_corner_radius="10dp"
        app:sriv_left_top_corner_radius="10dp"
        app:sriv_right_bottom_corner_radius="10dp"
        app:sriv_right_top_corner_radius="10dp"
        android:id="@+id/addMembersUserImage"
        android:layout_width="34dp"
        android:layout_centerVertical="true"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/user_photo"
        app:sriv_border_color="@color/green"
        app:sriv_border_width="1dp"        />


</RelativeLayout>



