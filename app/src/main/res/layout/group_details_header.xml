<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/groupHeader"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/chat_group_details_marginTop">

    <ImageView
        android:id="@+id/groupImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/groupImageBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.7"
        android:background="@color/gray"
        android:scaleType="fitXY"
        android:textAlignment="center" />



    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/groupInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupName"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="GroupInfo"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/grIconCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="17.5dp"
        android:clickable="true"
        android:text="@string/groupsIconCamera"
        android:textColor="@color/white"
        app:fontStyle="Icon"
        app:fontName="fontawesome-webfont.ttf"
        android:visibility="invisible"/>

    <webit.android.shanti.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/grIconCamera"
        android:text="@string/groupsSharePhoto"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="invisible"/>

    <webit.android.shanti.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/groupsIconAngleLeft"
        android:textColor="@color/white"
        android:layout_marginEnd="14dp"
        app:fontStyle="Icon"
        app:fontName="fontawesome-webfont.ttf" />
</RelativeLayout>
