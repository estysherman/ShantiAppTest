<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="63dp"
    android:layout_alignParentTop="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/infoActionMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/infoActionBarMap"
        android:textColor="@color/purple_home"
        android:textSize="17.5dp" />

    <LinearLayout
        android:layout_width="162.5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/purple_sgalgal">

        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/infoActionTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/infoActionBarInfo"
            android:textColor="@color/purple_home"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoActionBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingStart="9.5dp">



        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/infoActionBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groupsIconAngleRight"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:padding="5dp"
            app:fontStyle="Icon"
            app:fontName="fontawesome-webfont.ttf" />

        <webit.android.shanti.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/infoActionBackIcon"
            android:onClick="backClick"
            android:text=""
            android:textColor="@color/purple_home"
            android:textSize="17.5dp" />
    </LinearLayout>


</RelativeLayout>



