<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:paddingBottom="7.5dp"
    android:paddingEnd="18dp"
    android:textAlignment="gravity"
    android:layout_marginEnd="12dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="7.5dp"
        android:paddingEnd="18dp"
        android:textAlignment="gravity">

    <RelativeLayout
        android:layout_gravity="start"
        android:layout_width="60.5dp"
        android:layout_height="wrap_content">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/itemGroupProfileMemberImage"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/love"
            app:sriv_border_color="@color/green_home"
            app:sriv_border_width="1dp"
            app:sriv_left_bottom_corner_radius="12dp"
            app:sriv_left_top_corner_radius="12dp"
            app:sriv_right_bottom_corner_radius="12dp"
            app:sriv_right_top_corner_radius="12dp" />

        <ImageView
            android:id="@+id/itemGroupProfileMemberGroupManager"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/itemGroupProfileMemberImage"
            android:layout_alignStart="@+id/itemGroupProfileMemberImage"
            android:src="@drawable/group_manager_icon"
            android:visibility="visible" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <webit.android.shanti.customViews.CustomTextView
                android:id="@+id/itemGroupProfileMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:lines="1"
                android:text="שמעוין - "
                android:textColor="@color/gray_dark"
                android:textSize="16.5sp" />
            <webit.android.shanti.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:text=" - "
                android:layout_height="wrap_content" />
            <webit.android.shanti.customViews.CustomTextView
                android:id="@+id/itemGroupProfileMemberAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="start"
                android:text="@string/Location"
                android:layout_gravity="end"
                android:textColor="@color/gray_medium"
                android:textSize="16.5sp" />
        </LinearLayout>

        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/itemGroupProfileMemberAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="start"
            android:text=" הצטרף 10.2"
            android:layout_gravity="start"
            android:textColor="@color/gray_medium"
            android:textSize="13.5sp" />

    </LinearLayout>
    </LinearLayout>
    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/itemGroupProfileMemberRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/groupEditRemoveMember"
        android:visibility="gone"
        android:textColor="@color/gray_medium"
        android:textSize="16.5sp"/>


</RelativeLayout>