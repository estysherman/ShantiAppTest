<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/memberImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <com.joooonho.SelectableRoundedImageView
            app:sriv_left_bottom_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_bottom_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="42.5dp"
            android:minWidth="42.5dp"
            android:scaleType="fitXY"
            android:layout_height="42.5dp"
            android:id="@+id/memberImage"
            android:src="@drawable/love"
            app:sriv_border_width="0.8dp"
            app:sriv_border_color="@color/green"

             />

    </LinearLayout>
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/groupManagerIcon"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/memberImageContainer"
        android:layout_alignRight="@+id/memberImageContainer"
        android:layout_marginTop="1dp"
        android:background="@drawable/group_manager_icon"
        android:visibility="gone" />
</RelativeLayout>