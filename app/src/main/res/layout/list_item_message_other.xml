<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentOther"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:orientation="horizontal"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/friendImageOther"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/user_photo"
            app:sriv_border_color="@color/gray"
            app:sriv_border_width="1dp"
            app:sriv_left_bottom_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_bottom_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp" />

        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/itemMessageFriendNameOther"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:paddingTop="1dp"
            android:text="friendName"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/itemMessageTxtInfoOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:text="txtfgfgfgfggfgfgfInfo"
            android:textColor="@color/dark_gray"
            android:textSize="10sp" />

    </LinearLayout>

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/txtMessageOther"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_white"
        android:gravity="center|left"
        android:maxWidth="250dp"
        android:padding="20dp"
        android:text="txtMessage"
        android:textColor="@color/black" />


    <RelativeLayout
        android:id="@+id/attachmentOther"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/chat_white"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/attachmentImageOther"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/attachmentProgressDownloadOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/attachmentImageDownloadOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/chat_download_image"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>