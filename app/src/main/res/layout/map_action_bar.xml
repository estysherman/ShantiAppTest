<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="63dp"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/actionMapLeftButton"
        style="@style/purple_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:text="@string/actionBarInfo" />

    <View
        android:id="@+id/actionMapLine"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/actionMapLeftButton"
        android:background="@color/gray" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/actionMapPublicMessage"
        android:visibility="gone"
        style="@style/purple_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_toStartOf="@+id/actionMapLine"
        android:text="@string/actionBarMassage" />

    <ImageView
        android:id="@+id/actionMapToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_icn" />
</RelativeLayout>