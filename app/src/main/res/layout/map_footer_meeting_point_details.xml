<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapFooterCreateMeetingPoint"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meetingDetailsOpenChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/map_footer_green_chat_selector" />

    <ImageView
        android:id="@+id/meetingDetailsNavigateToMeetingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meetingDetailsOpenChat"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/map_footer_navigation_selector"
        android:textColor="@color/white" />


    <RelativeLayout
        android:layout_gravity="start"
        android:paddingStart="20dp"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:layout_width="252.5dp"
        android:layout_height="wrap_content">

        <webit.android.shanti.customViews.CustomTextView
            android:textColor="@color/green_home"
            android:id="@+id/meetingDetailsGroupName"
            android:textSize="20dp"
            android:maxWidth="180dp"
            android:lines="1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meetingDetailsGroup" />

        <webit.android.shanti.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:textColor="@color/green_home"
            android:textSize="20dp"
            android:id="@+id/meetingDetailsTime"
            android:layout_alignParentStart="true"
            android:layout_gravity="start|center"
            android:layout_height="wrap_content"
            android:text="22:45" />

        <webit.android.shanti.customViews.CustomTextView
            android:layout_alignParentStart="true"
            android:layout_below="@+id/meetingDetailsTime"
            android:layout_width="wrap_content"
            android:text="@string/meetingDetailsSetting"
            android:id="@+id/meetingDetailsSetting"
            android:layout_height="wrap_content" />

        <webit.android.shanti.customViews.CustomTextView
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/meetingDetailsSetting"
            android:text="@string/meetingDetailsComments"
            android:id="@+id/meetingDetailsComments"
            android:layout_height="wrap_content" />

        <webit.android.shanti.customViews.CustomTextView
            android:layout_alignParentStart="true"
            android:layout_below="@+id/meetingDetailsComments"
            android:text="@string/meetingDetailsCalculateTime"
            android:layout_width="wrap_content"
            android:id="@+id/meetingDetailsTimeToArrived"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>