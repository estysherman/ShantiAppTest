<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="63dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/profileActionTitle"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="title"
        android:textColor="@color/purple_home"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/profileActionBack"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="9.5dp"
        android:gravity="center"
        android:layout_height="wrap_content">


        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/profileActionBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groupsIconAngleRight"
            android:textColor="@color/gray"
            android:textSize="30dp"
            app:fontStyle="Icon"
            app:fontName="fontawesome-webfont.ttf" />


    </LinearLayout>


</RelativeLayout>



