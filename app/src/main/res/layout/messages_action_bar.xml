<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="63dp"
    android:layout_alignParentTop="true"
    android:background="@color/purple_home"
    android:orientation="horizontal">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/messagesActionMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="@string/actionBarMessagesMap"
        android:textColor="@color/white"
        android:textSize="17.5dp" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/messageActionTitle"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/actionBarMessages"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <LinearLayout
        android:id="@+id/messagesActionBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingStart="9.5dp">
        <webit.android.shanti.customViews.CustomTextView
            android:id="@+id/messagesActionBackIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actionBarLeft"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:fontStyle="Icon"
            app:fontName="fontawesome-webfont.ttf" />



        <webit.android.shanti.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/messagesActionBackIcon"
            android:onClick="backClick"
            android:text="@string/actionBarMessagesMenu"
            android:textColor="@color/white"
            android:textSize="17.5dp" />


    </LinearLayout>


</RelativeLayout>



