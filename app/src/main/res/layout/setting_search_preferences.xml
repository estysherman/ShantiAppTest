<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_alignParentTop="true"
    android:background="@color/purple_home"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:id="@+id/groupActionRelative"
    android:paddingTop="8dp">

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/groupActionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="@string/personalAreaSearchPeopleSettings"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <webit.android.shanti.customViews.CustomTextView
        android:id="@+id/messagesActionBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="8dp"
        android:onClick="backClick"
        android:layout_centerInParent="true"
        android:text="@string/signInBack"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:fontStyle="Icon"
        app:fontName="fontawesome-webfont.ttf" />
</RelativeLayout>



