<resources>

    <!-- Base application theme. .DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        ...
    </style>
    <style name="general_list_view">
        <item name="android:divider">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="general_editText">
        <item name="android:textCursorDrawable">@drawable/general_cursor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="general_AutoComplete" parent="general_editText">
        <item name="android:drawableLeft">@drawable/spinner</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="general_Spinner" parent="general_Text">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="search_pref_AutoComplete">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/wihte_block_with_stroke</item>
    </style>

    <style name="general_Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="info_main_background">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/info_main_button</item>
    </style>

    <style name="info_item_background">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/info_item_button</item>
    </style>


    <style name="info_main_button_button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">10dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="info_main_button_text" parent="info_main_button_button">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/very_light_purple</item>
    </style>

    <style name="info_main_button_icon" parent="info_main_button_button">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/very_light_purple</item>
    </style>

    <style name="general_button">
        <item name="android:background">@drawable/light_purple_rect</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="purple_text">
        <item name="android:textColor">@color/purple_home</item>
    </style>

    <style name="green_text">
        <item name="android:textColor">@color/green</item>
    </style>

    <!--<style name="gray_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>-->


    <style name="side_menu_button">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/wihte_rect_block</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="side_menu_purple_button">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/purple_rect_block</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="place_details_text">
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:textSize">16.5dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="place_details_icon">
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:textSize">16.5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="meeting_point_input_border">
        <item name="android:layout_marginBottom">20.5dp</item>\
        <item name="android:background">@drawable/meeting_point_edit_text_border</item>
        <item name="android:layout_height">33.5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="meeting_point_input_text_view">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="meeting_point_input_edit_text">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16.5dp</item>
        <item name="android:imeOptions">flagNoExtractUi|actionNext</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="verification_code_button">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/verification_code_number_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">36dp</item>
    </style>

    <style name="verification_code_up_status">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">12.5dp</item>
        <item name="android:layout_width">12.5dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@drawable/circle_verify_code</item>
    </style>

    <style name="member_profile_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/member_profile_text_textSize</item>
    </style>

    <style name="member_profile_gray_dark_text" parent="member_profile_text">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="member_profile_gray_medium_text" parent="member_profile_text">
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="member_profile_text_container">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="shadow_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:alpha">0.2</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="my_profile_container">
        <item name="android:paddingRight">17.5dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:background">@color/offwhite_base</item>
    </style>

    <style name="my_profile_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">87.5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="my_profile_header_title">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="my_profile_header_edit">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/myProfileEdit</item>
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="my_profile_inputs_container">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="my_profile_input">
        <item name="android:textCursorDrawable">@drawable/general_cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/my_profile_edit_text_background</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/gray_medium</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="my_profile_spinner" parent="my_profile_input">
        <item name="android:drawableLeft">@drawable/spinner</item>
    </style>


    <style name="search_user_text">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
